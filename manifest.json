{
  "manifest_version": 3,
  "name": "Playwright Locator Inspector",
  "version": "4.0.0",
  "description": "DevTools panel to generate robust Playwright & XPath locators uniquely identified within the DOM. Supports AI optimization.",
  "devtools_page": "src/devtools.html",
  "action": {
    "default_title": "Playwright Inspector",
    "default_icon": {
      "16": "src/icons/icon16.png",
      "48": "src/icons/icon48.png",
      "128": "src/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "<all_urls>"
  ],
  "icons": {
    "16": "src/icons/icon16.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  }
}